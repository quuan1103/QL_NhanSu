<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - Quản Lý Nhân Sự</title>
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ThemmoiLL.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jstree@3.3.12/dist/themes/default/style.min.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jstree@3.3.12/dist/jstree.min.js"></script>
</head>
<body>
    <div class="col-xxl-12">
        <div class="page-content">
            <div class="card border card-border-primary">
                <div class="card-header border border-danger rounded p-3">
    <!-- Danh sách nhân viên -->
    <div class="col-md-9">
        <style>
            .table-container {
                border: 1px solid #ccc;
                border-radius: 8px;
                padding: 16px;
                background-color: white;
                box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
                overflow-x: auto;
            }

            .custom-table th, .custom-table td {
                vertical-align: middle;
                text-align: center;
            }
        </style>

        <div class="table-container">
            <table class="table table-bordered table-striped custom-table" style="min-width: 1200px;">
                <thead class="table-light">
                    <tr>
                        <th>STT</th>
                        <th>Mã VC/NLD</th>
                        <th>Họ tên</th>
                        <th>Giới Tính</th>
                        <th>Ngày Sinh</th>
                        <th>Phòng Ban</th>
                        <th>Số Điện Thoại</th>
                        <th>Email</th>
                        <th>Nơi cấp CCCD</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="tblNhanVien">
                    @* Dữ liệu nhân viên sẽ được load từ controller *@
                </tbody>
            </table>
        </div>
       
    </div>
    </div>
    </div>
    </div>
    </div>
</body>
</html>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - Quản Lý Nhân Sự</title>
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar giữ nguyên -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-danger text-white sidebar py-4">
                <div class="text-center mb-4">
                    <h3 class="fw-bold">Quản Lý Nhân Sự</h3>
                </div>
                <ul class="nav flex-column px-3">
                    @* Quản lý hồ sơ *@
                    <li class="nav-item">
                        <a class="nav-link menu-link parent-node" href="#menu_quanlyhoso" data-menu="quanlyhoso"
                           data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="menu_quanlyhoso">
                            <span>1. Quản lý hồ sơ</span>
                        </a>
                        <div class="menu-dropdown collapse" id="menu_quanlyhoso">
                            <ul class="nav nav-sm flex-column">
                                <li class="nav-item">
                                    <a asp-controller="Quanlyhoso" asp-action="Soyeu" data-menu="Soyeu" class="nav-link">
                                        <span>1.1 Sơ yếu lý lịch VC/NLĐ</span>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-sm flex-column">
                                <li class="nav-item">
                                    <a asp-controller="Quanlyhoso" asp-action="Quatrinhdaotao" data-menu="Quatrinhdaotao" class="nav-link">
                                        <span>1.2 Quá trình đào tạo</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="NhanVien" asp-action="Index">Nhân viên</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="PhongBan" asp-action="Index">Phòng ban</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="ThongKe" asp-action="Index">Thống kê</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="TaiKhoan" asp-action="DangXuat">Đăng xuất</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="DanhMuc" asp-action="Index">Danh mục</a></li>
                </ul>
            </nav>

            <!-- Nội dung sẽ thay đổi tại đây -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





